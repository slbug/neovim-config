{
  "mcpServers": {
    "fetch": {
      "command": "uvx",
      "args": [
        "mcp-server-fetch",
        "--ignore-robots-txt"
      ]
    },
    "package-version": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-package-version"
      ]
    },
    "time": {
      "command": "uvx",
      "args": ["mcp-server-time", "--local-timezone=Europe/Warsaw"]
    }
  }
}
